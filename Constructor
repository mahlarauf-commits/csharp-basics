using System.Net.Http.Headers;
product product =  new product("Mahla Rauf" , 500000);
Console.WriteLine(product);
Console.WriteLine(product.MinPrice);

public class product
{
    public product(string Name):this (Name , 5000)
    {
     
    }
    public product(string name , int price)
    {
        Name = name;
        Price = price;
    }
    public product()
    {
    }
    static product()
    {
        MinPrice = 2000;
    }
    public product(bool IsAvailable) => this .IsAvailable = IsAvailable;

    public string Name { get; set; }
    public int Price { get; set; }
    public bool IsAvailable{ get; set; }
    public static int MinPrice;
}
